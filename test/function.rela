
function abc(a)
	b=2
	lib.assert(a == 1)
	lib.assert(b == 2)
end

abc(1)
lib.assert(global.a == nil)
lib.assert(global.b == nil)

function outer()
	function inner()
		return 1
	end
	function inner2()
		function inner3()
			return inner()+1
		end
		return inner3()+1
	end
	lib.assert(inner)
	lib.assert(inner() == 1)
	lib.assert(inner2() == 3)
end

lib.assert(global.inner == nil)

outer()
